<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/ComponentesExternos/DataTable/dataTables.dataTables.min.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container-fluid">
          
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">
                <i class="bi bi-house-door-fill me-2"></i>Sistema de Gestión Financiera
            </a>

          
            <div class="d-flex justify-content-center w-100">
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Personas", "ListarPersonas", "Personas",
                                                  new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Actividades Financieras", "Index", "ActividadFinanciera",
                                                  new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Bitácora de Eventos", "Index", "BitacoraEventos",
                                                  new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Archivos de Análisis", "Listar", "ArchivoAnalisis",
                                                  new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Análisis de Personas", "Listar", "AnalizarPersona",
                                                  new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Palabras Clave", "ListarPalabraClave", "PalabrasClave",
                                                  new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }
                        if (User.IsInRole("Analista"))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Personas", "ListarPersonas", "Personas",
                                                  new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Archivos de Análisis", "Listar", "ArchivoAnalisis",
                                                  new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Análisis de Personas", "Listar", "AnalizarPersona",
                                                  new { area = "" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Palabras Clave", "ListarPalabraClave", "PalabrasClave",
                                                  new { area = "" }, new { @class = "nav-link" })
                            </li>
                        }
                    }
                </ul>
            </div>

      
            <div class="d-flex justify-content-end">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    @*/ @Scripts.Render("~/bundles/jquery") /*@
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/ComponentesExternos/DataTable/dataTables.min.js"></script>
    <script src="~/Scripts/ComponentesExternos/SweetAlert/sweetalert2@11.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
