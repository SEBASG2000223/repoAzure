@model ControlDeRiesgoFinanciero.Abstracciones.Modelos.ActividadPersona.ActividadPersonaDto

@{
    ViewBag.Title = "Edit";
}
<br />
<h2 class="text-center">Eliminar Actividad</h2>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group" style="display: none;">
            @Html.LabelFor(model => model.IdActividadPersona, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdActividadPersona, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IdActividadPersona, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display: none;">
            @Html.LabelFor(model => model.IdActividadFinanciera, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdActividadFinanciera, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IdActividadFinanciera, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display: none;">
            @Html.LabelFor(model => model.IdPersona, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdPersona, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IdPersona, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group d-flex justify-content-center align-items-center" style="height: 100px;">
            <div class="col-md-10">
                <p class="text-center" style="font-size: 16px; color: #f44336; font-weight: bold; margin: 0;">
                    Está a punto de desactivar este registro. Esta acción no puede ser revertida.
                </p>
            </div>
        </div>



        <div class="form-group text-center">
            <div class="col-md-12">
                <input type="submit" value="Eliminar" class="btn btn-danger btn-lg" style="padding: 10px 20px;" />
            </div>
        </div>

    </div>
    <br />
}

<div >
    <a href="@Request.UrlReferrer" class="btn btn-secondary btn-md">Volver a la lista</a>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
