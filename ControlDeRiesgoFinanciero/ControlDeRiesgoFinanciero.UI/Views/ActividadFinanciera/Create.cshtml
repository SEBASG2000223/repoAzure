@model ControlDeRiesgoFinanciero.Abstracciones.Modelos.ActividadFinanciera.ActividadFinancieraDto

@{
    ViewBag.Title = "Registrar Actividad Financiera";
}

<h2>Registrar Actividad Financiera</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.NombreActividadFinanciera, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NombreActividadFinanciera, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NombreActividadFinanciera, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DescripcionActividadFinanciera, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DescripcionActividadFinanciera, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DescripcionActividadFinanciera, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NivelDeRiesgo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.NivelDeRiesgo,
                new List<SelectListItem>
                {
                    new SelectListItem { Text = "Bajo", Value = "1" },
                    new SelectListItem { Text = "Medio", Value = "2" },
                    new SelectListItem { Text = "Alto", Value = "3" }
                },
                htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.NivelDeRiesgo, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.HiddenFor(model => model.Estado)
    </div>


    <br>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Registrar" class="btn btn-primary" />
        </div>
    </div>
</div>
}
<br>
<div>
    <a href="@Request.UrlReferrer" class="btn btn-secondary btn-md">Volver a la lista</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
